{
  "url_template": "/admin/class/{class_id}/student/",
  "template_parameters": [
    {
      "class_id": {
        "type": "integer",
        "entity": "http://entities.backtoschool.io/classid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "students": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "entity": "http://entities.backtoschool.io/studentid"
                },
                "lastname": {
                  "type": "string",
                  "entity": "http://entities.backtoschool.io/studentlastname"
                },
                "name": {
                  "type": "string",
                  "entity": "http://entities.backtoschool.io/studentname"
                },
                "class_id": {
                  "type": "integer",
                  "entity": "http://entities.backtoschool.io/classid"
                },
                "parent_id": {
                  "type": "integer",
                  "entity": "http://entities.backtoschool.io/parentid"
                }
              }
            }
          }
        }
      }
    }
  ]
}