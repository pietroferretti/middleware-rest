{
  "url_template": "/admin/payment/class/{class_id}/",
  "template_parameters": [
    {
      "class_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/classid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "null"
      }
    },
    {
      "method": "POST",
      "inputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "amount": {
            "type": "number"
          },
          "date": {
            "type": "string",
            "entity": "http://entities.highschool.com/date"
          },
          "reason": {
            "type": "string",
            "entity": "http://entities.highschool.com/paymentreason"
          }
        },
        "required": [
          "amount",
          "date",
          "reason"
        ]
      },
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "payment": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "number"
              },
              "date": {
                "type": "string",
                "entity": "http://entities.highschool.com/date"
              },
              "reason": {
                "type": "string",
                "entity": "http://entities.highschool.com/paymentreason"
              },
              "pending": {
                "type": "bool",
                "constant": 1
              }
            }
          },
          "number_created": {
            "type": "integer"
          }
        }
      }
    }
  ]
}