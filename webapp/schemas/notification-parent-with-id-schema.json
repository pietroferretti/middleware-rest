{
  "url_template": "/admin/notification/parent/{parent_id}/",
  "template_parameters": [
    {
      "parent_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/parentid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "notifications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "entity": "http://entities.highschool.com/notificationid"
                },
                "date": {
                  "type": "string",
                  "entity": "http://entities.highschool.com/date"
                },
                "scope": {
                  "constant": "one_parent",
                  "entity": "http://entities.highschool.com/notificationscope"
                },
                "parent_id": {
                  "type": "integer",
                  "entity": "http://entities.highschool.com/parentid"
                },
                "text": {
                  "type": "string",
                  "entity": "http://entities.highschool.com/notificationtext"
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "inputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "entity": "http://entities.highschool.com/notificationtext"
          }
        },
        "required": [
          "text"
        ]
      },
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "notification": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "entity": "http://entities.highschool.com/notificationid"
              },
              "date": {
                "type": "string",
                "entity": "http://entities.highschool.com/date"
              },
              "scope": {
                "constant": "one_parent",
                "entity": "http://entities.highschool.com/notificationscope"
              },
              "parent_id": {
                "type": "integer",
                "entity": "http://entities.highschool.com/parentid"
              },
              "text": {
                "type": "string",
                "entity": "http://entities.highschool.com/notificationtext"
              }
            }
          }
        }
      }
    }
  ]
}