{
  "url_template": "/parent/{parent_id}/appointment/teacher/{teacher_id}/year/{year}/month/{month}/day/{day}/",
  "template_parameters": [
    {
      "teacher_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/teacherid"
      }
    },
    {
      "month": {
        "type": "integer",
        "minimum": 1,
        "maximum": 12
      }
    },
    {
      "day": {
        "type": "integer",
        "minimum": 1,
        "maximum": 31
      }
    },
    {
      "year": {
        "type": "integer",
        "minimum": 2017,
        "maximum": 2018
      }
    },
    {
      "parent_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/parentid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "entity": "http://entities.highschool.com/date"
          },
          "free_slots": {
            "type": "array",
            "items": {
              "type": "string",
              "entity": "http://entities.highschool.com/hour"
            }
          }
        }
      }
    }
  ]
}