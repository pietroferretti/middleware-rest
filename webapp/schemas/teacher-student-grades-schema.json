{
  "url_template": "/teacher/{teacher_id}/class/{class_id}/subject/<subject_id}/student/{student_id}/grade/",
  "template_parameters": [
    {
      "class_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/classid"
      }
    },
    {
      "student_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/student"
      }
    },
    {
      "teacher_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/teacherid"
      }
    },
    {
      "subject_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/subjectid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "grades": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "entity": "http://entities.highschool.com/date"
                },
                "id": {
                  "type": "integer",
                  "entity": "http://entities.highschool.com/gradeid"
                },
                "value": {
                  "type": "integer",
                  "entity": "http://entities.highschool.com/gradevalue"
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "inputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "entity": "http://entities.highschool.com/date"
          },
          "value": {
            "type": "integer",
            "entity": "http://entities.highschool.com/gradevalue"
          }
        },
        "required": [
          "date",
          "value"
        ]
      },
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "grade": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "entity": "http://entities.highschool.com/gradeid"
              },
              "date": {
                "type": "string",
                "entity": "http://entities.highschool.com/date"
              },
              "subject_id": {
                "type": "integer",
                "entity": "http://entities.highschool.com/subjectid"
              },
              "student_id": {
                "type": "string",
                "entity": "http://entities.highschool.com/studentid"
              },
              "value": {
                "type": "integer",
                "entity": "http://entities.highschool.com/gradevalue"
              }
            }
          }
        }
      }
    }
  ]
}