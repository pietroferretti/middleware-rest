{
  "url_template": "/parent/{parent_id}/child/{student_id}/",
  "template_parameters": [
    {
      "student_id": {
        "type": "integer",
        "entity": "http://entities.backtoschool.io/studentid"
      }
    },
    {
      "parent_id": {
        "type": "integer",
        "entity": "http://entities.backtoschool.io/parentid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "object",
        "properties": {
          "student": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "entity": "http://entities.backtoschool.io/studentid"
              },
              "lastname": {
                "type": "string",
                "entity": "http://entities.backtoschool.io/studentlastname"
              },
              "name": {
                "type": "string",
                "entity": "http://entities.backtoschool.io/studentname"
              },
              "class": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "entity": "http://entities.backtoschool.io/classid"
                  },
                  "name": {
                    "type": "string",
                    "entity": "http://entities.backtoschool.io/classname"
                  },
                  "room": {
                    "type": "string",
                    "entity": "http://entities.backtoschool.io/room"
                  },
                  "subjects": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "entity": "http://entities.backtoschool.io/subjectid"
                        },
                        "name": {
                          "type": "string",
                          "entity": "http://entities.backtoschool.io/subjectname"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}