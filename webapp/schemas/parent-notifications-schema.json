{
  "url_template": "/parent/{parent_id}/notifications/",
  "template_parameters": [
    {
      "parent_id": {
        "type": "integer",
        "entity": "http://entities.highschool.com/parentid"
      }
    }
  ],
  "actions": [
    {
      "method": "GET",
      "outputschema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "scope": {
                  "constant": "class",
                  "entity": "http://entities.highschool.com/notificationscope"
                },
                "notifications": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "student": {
                        "type": "object",
                        "properties": {
                          "lastname": {
                            "type": "string",
                            "entity": "http://entities.highschool.com/studentlastname"
                          },
                          "name": {
                            "type": "string",
                            "entity": "http://entities.highschool.com/studentname"
                          }
                        }
                      },
                      "notifications": {
                        "type": "object",
                        "properties": {
                          "date": {
                            "type": "string",
                            "entity": "http://entities.highschool.com/date"
                          },
                          "text": {
                            "type": "string",
                            "entity": "http://entities.highschool.com/notificationtext"
                          },
                          "class_notification_scope": {
                            "type": "string",
                            "entity": "http://entities.highschool.com/notificationscope"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "scope": {
                  "type": "string",
                  "entity": "http://entities.highschool.com/notificationscope"
                },
                "notifications": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "entity": "http://entities.highschool.com/date"
                      },
                      "text": {
                        "type": "string",
                        "entity": "http://entities.highschool.com/notificationtext"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  ]
}