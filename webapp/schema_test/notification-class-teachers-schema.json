{
    "url_template": "/admin/notification/class/{class_id}/teachers/",
    "template_parameters": [
        {
            "class_id": {
                "type": "integer",
                "entity": "http://entities.highschool.com/someid"
            }
        }
    ],
    "actions": [
        {
            "method": "GET",
            "outputschema": {
                "$schema": "http://json-schema.org/draft-06/schema#",
                "type": "null"
            }
        },
        {
            "method": "POST",
            "inputschema": {
                "$schema": "http://json-schema.org/draft-06/schema#",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "entity": "http://entities.highschool.com/username"
                    },
                    "password": {
                        "type": "string",
                        "entity": "http://entities.highschool.com/password"
                    }
                },
                "required": ["username", "password"]
            },
            "outputschema": {
                "$schema": "http://json-schema.org/draft-06/schema#",
                "type": "null"
            }
        }
    ]
}
